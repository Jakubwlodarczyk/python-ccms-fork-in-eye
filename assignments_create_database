PRAGMA foreign_keys = 0;

CREATE TABLE assignements (
    ID         INTEGER PRIMARY KEY AUTOINCREMENT
                       UNIQUE,
    start_date DATE,
    end_date   DATE,
    name       TEXT
);

INSERT INTO assignements (
                             ID,
                             start_date,
                             end_date,
                             name
                         )
                         SELECT ID,
                                start_date,
                                end_date,
                                name
                           FROM assignement;

DROP TABLE assignement;

PRAGMA foreign_keys = 1;
